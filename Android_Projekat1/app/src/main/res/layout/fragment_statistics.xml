        app:layout_constraintTop_toBottomOf="@+id/numDone2" />

    <TextView
        android:id="@+id/engancemen3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/enhancment"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.378"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Done" />

    <TextView
        android:id="@+id/bugs3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/bugs"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/engancemen3"
        app:layout_constraintTop_toBottomOf="@+id/engancemen3" />

</androidx.constraintlayout.widget.ConstraintLayout>